# Hospital Management System - Environment Variables Template
# Copy this file to .env and update with your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# IBM DB2 Connection String
# Format: DATABASE=<dbname>;HOSTNAME=<host>;PORT=<port>;PROTOCOL=TCPIP;UID=<user>;PWD=<password>;
DB2_CONN_STRING=DATABASE=HOSPDB;HOSTNAME=127.0.0.1;PORT=25000;PROTOCOL=TCPIP;UID=db2admin;PWD=Atharva@123;

# ==========================================
# SERVER CONFIGURATION
# ==========================================

# Backend Server Port
PORT=4000

# Node Environment
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Maximum file upload size (in kb)
MAX_FILE_SIZE=16384

# Enable detailed logging
DEBUG=false

# ==========================================
# PRODUCTION SETTINGS (when deploying)
# ==========================================

# For production, update these:
# NODE_ENV=production
# DB2_CONN_STRING=<your-production-connection-string>
# FRONTEND_URL=<your-production-frontend-url>
